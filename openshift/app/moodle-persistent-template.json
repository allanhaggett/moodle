{
  "apiVersion": "v1",
  "kind": "Template",
  "labels": {
    "template": "moodle-persistent-template"
  },
  "message": "The following Site has been created in your project: ${APP_NAME}.\nDB: ${DB_NAME}.\n\n  URL: ${SITE_URL}",
  "metadata": {
    "annotations": {
      "description": "Moodle application service, with persistent storage.",
      "iconClass": "icon-mysql-database",
      "openshift.io/display-name": "MySQL",
      "openshift.io/long-description": "This template provides a standalone Moodle server (PHP, Moodle).  The application cache is stored on persistent storage.  The database name, username, and password are chosen via parameters when provisioning this service.",
      "tags": "application,${APP_NAME}"
    },
    "name": "moodle-persistent"
  },
  "objects": [
    {
			"apiVersion": "v1",
			"kind": "Secret",
			"metadata": {
				"annotations": {
					"template.openshift.io/expose-database_name": "{.data['database-name']}",
					"template.openshift.io/expose-password": "{.data['database-password']}",
					"template.openshift.io/expose-root_password": "{.data['database-root-password']}",
					"template.openshift.io/expose-username": "{.data['database-user']}"
				},
				"name": "${APP_NAME}-secret"
			},
			"stringData": {
				"database-name": "${DB_NAME}",
				"database-password": "${DB_PASSWORD}",
				"database-root-password": "${DB_ROOT_PASSWORD}",
				"database-user": "${DB_USER}"
			}
    },
    {
			"apiVersion": "v1",
			"kind": "Route",
			"metadata": {
        "name": "${APP_NAME}-route",
        "namespace": "${PROJECT_NAMESPACE}",
        "labels": {
          "app": "${APP_NAME}",
          "app.kubernetes.io/component": "${APP_NAME}",
          "app.kubernetes.io/instance": "${APP_NAME}"
        }
      },
      "spec": {
        "host": "moodle-moodle-aro.apps-crc.testing",
        "to": {
          "kind": "Service",
          "name": "${APP_NAME}-app",
          "weight": 100
        },
        "port": {
          "targetPort": "${CONTAINER_PORT}-tcp"
        },
        "wildcardPolicy": "None"
      }
		},
    {
      "apiVersion": "v1",
      "kind": "Service",
      "metadata": {
        "name": "${APP_NAME}-app"
      },
      "spec": {
        "ports": [
          {
            "name": "${APP_NAME}",
            "port": 8080,
            "targetPort": 8080,
            "protocol": "TCP"
          }
        ],
        "selector": {
          "service": "${APP_NAME}-app"
        }
      }
    },
    {
      "apiVersion": "v1",
      "kind": "PersistentVolumeClaim",
      "metadata": {
        "name": "${APP_NAME}-app"
      },
      "spec": {
        "accessModes": [
          "ReadWriteMany"
        ],
        "resources": {
          "requests": {
            "storage": "${MOODLE_VOLUME_CAPACITY}"
          }
        }
      }
    },
    {
      "apiVersion": "v1",
      "kind": "DeploymentConfig",
      "metadata": {
        "annotations": {
          "template.alpha.openshift.io/wait-for-ready": "true"
        },
        "name": "${APP_NAME}-app"
      },
      "spec": {
        "replicas": 2,
        "selector": {
          "name": "${APP_NAME}-app"
        },
        "template": {
          "metadata": {
            "labels": {
              "name": "${APP_NAME}-app"
            }
          },
          "spec": {
            "source": {
              "type": "Git",
              "git": {
                "uri": "${GIT_URL}",
                "ref": "${GIT_TAG}"
              }
            },
            "output": {
              "to": {
                "kind": "ImageStreamTag",
                "name": "${GIT_PROJECT}:${GIT_TAG}",
                "namespace": "${PROJECT_NAMESPACE}"
              }
            },
            "containers": [
              {
                "name": "${APP_NAME}",
                "image": " ",
                "imagePullPolicy": "IfNotPresent",
                "command": "chown",
                "args": [
                  "-R",
                  "www-data:www-data /vendor/moodle"
                ],
                "ports": [
                  {
                    "containerPort": 8080
                  }
                ],
                "resources": {
                  "limits": {
                    "memory": "${MOODLE_MEMORY_LIMIT}"
                  }
                },
                "volumeMounts": [
                  {
                    "mountPath": "${MOODLE_DATA_PATH}",
                    "name": "${APP_NAME}-data"
                  }
                ],
                "env": [
                  {
                    "name": "MYSQL_USER",
                    "valueFrom": {
											"secretKeyRef": {
												"key": "database-user",
												"name": "${DB_SERVICE_NAME}"
											}
										}
                  },
                  {
										"name": "MYSQL_PASSWORD",
										"valueFrom": {
											"secretKeyRef": {
												"key": "database-password",
												"name": "${DB_SERVICE_NAME}"
											}
										}
									},
                  {
										"name": "MYSQL_ROOT_PASSWORD",
										"valueFrom": {
											"secretKeyRef": {
												"key": "database-root-password",
												"name": "${DB_SERVICE_NAME}"
											}
										}
									},
									{
										"name": "MYSQL_DATABASE",
										"valueFrom": {
											"secretKeyRef": {
												"key": "database-name",
												"name": "${DB_SERVICE_NAME}"
											}
										}
									}
                ]
              }
            ],
            "strategy": {
              "dockerStrategy": {
                "dockerfilePath": "Dockerfile"
              }
            },
            "volumes": [
              {
                "name": "${APP_NAME}-data",
                "persistentVolumeClaim": {
                  "claimName": "${APP_NAME}-data"
                }
              }
            ]
          }
        },
        "triggers": [
          {
            "imageChangeParams": {
              "automatic": true,
              "containerNames": [
                "${APP_NAME}"
              ],
              "from": {
                "kind": "ImageStreamTag",
                "name": "${GIT_PROJECT}:${GIT_TAG}"
              }
            },
            "type": "ImageChange"
          },
          {
            "type": "ConfigChange"
          }
        ]
      }
    },
    {
      "apiVersion": "apps/v1",
      "kind": "Deployment",
      "metadata": {
        "labels": {
          "service": "${APP_NAME}-app"
        },
        "name": "${APP_NAME}-app"
      },
      "spec": {
        "replicas": 2,
        "selector": {
          "matchLabels": {
            "service": "${APP_NAME}-app"
          }
        },
        "triggers": {
          "type": "ImageChange",
          "imageChangeParams": {
            "automatic": true,
            "containerNames": [
              "${APP_NAME}-app"
            ],
            "from": {
              "kind": "ImageStreamTag",
              "name": "${GIT_PROJECT}:${GIT_TAG}",
              "namespace": "${PROJECT_NAMESPACE}"
            }
          },
          "strategy": {
            "type": "Rolling"
          }
        },
        "template": {
          "metadata": {
            "labels": {
              "service": "${APP_NAME}-app"
            }
          },
          "spec": {
            "containers": [
              {
                "image": "${BUILD_IMAGE}",
                "name": "${APP_NAME}-app",
                "ports": [
                  {
                    "containerPort": 8080
                  }
                ],
                "command": "chown",
                "args": [
                  "-R",
                  "www-data:www-data /vendor/moodle"
                ],
                "resources": {},
                "env": [
                  {
                    "name": "APP_NAME",
                    "value": "${APP_NAME}"
                  },
                  {
                    "name": "SITE_URL",
                    "value": "${SITE_URL}"
                  },
                  {
                    "name": "MOODLE_MEMORY_LIMIT",
                    "value": "${MOODLE_MEMORY_LIMIT}"
                  },
                  {
                    "name": "MOODLE_VOLUME_CAPACITY",
                    "value": "${MOODLE_VOLUME_CAPACITY}"
                  },
                  {
                    "name": "HTTP_PORT",
                    "value": "${HTTP_PORT}"
                  },
                  {
                    "name": "DB_SERVICE_NAME",
                    "value": "${DB_SERVICE_NAME}"
                  },
                  {
                    "name": "DB_HOST_NAME",
                    "value": "${DB_HOST_NAME}"
                  },
                  {
                    "name": "DB_PORT",
                    "value": "${DB_PORT}"
                  },
                  {
                    "name": "PROJECT_NAMESPACE",
                    "value": "${PROJECT_NAMESPACE}"
                  },
                  {
                    "name": "DB_NAME",
                    "value": "${DB_NAME}"
                  },
                  {
                    "name": "DB_USER",
                    "value": "${DB_USER}"
                  },
                  {
                    "name": "DB_PASSWORD",
                    "value": "${DB_PASSWORD}"
                  },
                  {
                    "name": "GIT_PROJECT",
                    "value": "${GIT_PROJECT}"
                  },
                  {
                    "name": "GIT_TAG",
                    "value": "${GIT_TAG}"
                  }
                ]
              }
            ],
            "restartPolicy": "Always"
          }
        }
      }
    }
  ],
  "parameters": [
    {
      "description": "Application name.",
      "displayName": "App Name",
      "name": "APP_NAME",
      "required": true,
      "value": "${APP_NAME}"
    },
    {
      "description": "Build image location.",
      "displayName": "Build Image",
      "name": "BUILD_IMAGE",
      "required": true,
      "value": "${BUILD_IMAGE}"
    },
    {
      "description": "Moodle data path.",
      "displayName": "Moodle Data Path",
      "name": "MOODLE_DATA_PATH",
      "required": true,
      "value": "${MOODLE_DATA_PATH}"
    },
    {
      "description": "Website URL.",
      "displayName": "URL",
      "name": "SITE_URL",
      "required": true,
      "value": "${SITE_URL}"
    },
    {
      "description": "Maximum amount of memory the container can use.",
      "displayName": "Memory Limit",
      "name": "MOODLE_MEMORY_LIMIT",
      "required": true,
      "value": "${MOODLE_MEMORY_LIMIT}"
    },
    {
      "description": "Volume space available for Moodle application, e.g. 512Mi, 2Gi.",
      "displayName": "Moodle Volume Capacity",
      "name": "MOODLE_VOLUME_CAPACITY",
      "required": true,
      "value": "${MOODLE_VOLUME_CAPACITY}"
    },
    {
      "description": "Ports opened for connections to the application from the Internet.",
      "displayName": "App Port",
      "name": "HTTP_PORT",
      "required": true,
      "value": "${HTTP_PORT}"
    },
    {
      "description": "Container Ports opened for connections to the application from the Internet.",
      "displayName": "Container Port",
      "name": "CONTAINER_PORT",
      "required": true,
      "value": "${CONTAINER_PORT}"
    },
    {
      "description": "Database service name.",
      "displayName": "DB Service Name",
      "name": "DB_SERVICE_NAME",
      "required": true,
      "value": "${DB_SERVICE_NAME}"
    },
    {
      "description": "Database host name.",
      "displayName": "DB Host",
      "name": "DB_HOST_NAME",
      "required": true,
      "value": "${DB_HOST_NAME}"
    },
    {
      "description": "Database Port opened for connections from other containers.",
      "displayName": "DB Port",
      "name": "DB_PORT",
      "required": true,
      "value": "${DB_PORT}"
    },
    {
      "description": "The OpenShift Namespace where the ImageStream resides.",
      "displayName": "Namespace",
      "name": "PROJECT_NAMESPACE",
      "value": "${PROJECT_NAMESPACE}"
    },
    {
      "description": "Name of the MySQL database accessed.",
      "displayName": "MySQL Database Name",
      "name": "DB_NAME",
      "required": true,
      "value": "${DB_NAME}"
    },
    {
      "description": "Username for MySQL user that will be used for accessing the database.",
      "displayName": "MySQL Connection Username",
      "name": "DB_USER",
      "required": true,
      "value": "${DB_USER}"
    },
    {
      "description": "Password for the MySQL connection user.",
      "displayName": "MySQL Connection Password",
      "name": "DB_PASSWORD",
      "required": true,
      "value": "${DB_PASSWORD}"
    },
    {
      "description": "Git project URL, where project source can be found.",
      "displayName": "Git Project",
      "name": "GIT_PROJECT",
      "required": true,
      "value": "${GIT_PROJECT}"
    },
    {
      "description": "Git project URL.",
      "displayName": "Git URL",
      "name": "GIT_URL",
      "required": true,
      "value": "${GIT_URL}"
    },
    {
      "description": "Git project tag to use for source.",
      "displayName": "Git Tag",
      "name": "GIT_TAG",
      "required": true,
      "value": "${GIT_TAG}"
    }
  ]
}